<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counselor.CounsilorDashboard">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        android:contentDescription="@string/background_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/counselor_dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/viewReportsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_user_reports"
                android:backgroundTint="@color/soft_pink"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/chatWithUsersBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chat_with_users"
                android:backgroundTint="@color/soft_pink"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/publishResourceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/publish_article"
                android:backgroundTint="@color/soft_pink"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
